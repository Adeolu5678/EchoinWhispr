{
  "name": "echoinwhispr-monorepo",
  "version": "1.0.0",
  "description": "EchoinWhspr - Anonymous messaging platform monorepo",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "Web",
    "ReactNative",
    "Convex",
    "design-system"
  ],
  "scripts": {
    "install:all": "pnpm install",
    "dev": "pnpm -r dev",
    "dev:web": "pnpm --filter Web dev",
    "dev:rn": "pnpm --filter ReactNative start",
    "dev:convex": "pnpm --filter Convex dev",
    "start:web": "pnpm --filter Web start",
    "start:rn": "pnpm --filter ReactNative start",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter Web build",
    "build:rn": "pnpm --filter ReactNative build",
    "build:convex": "pnpm --filter Convex build",
    "build:all": "pnpm build:web && pnpm build:rn",
    "deploy:convex": "pnpm --filter Convex deploy",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "clean:node_modules": "rimraf node_modules \"**/node_modules\" pnpm-lock.yaml",
    "clean:install": "pnpm clean:node_modules && pnpm install",
    "convex:dev": "pnpm --filter Convex dev",
    "convex:deploy": "pnpm --filter Convex deploy",
    "convex:generate": "pnpm --filter Convex generate",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EchoinWhspr/EchoinWhspr.git"
  },
  "keywords": [
    "monorepo",
    "react",
    "react-native",
    "nextjs",
    "convex",
    "typescript"
  ],
  "author": "EchoinWhspr Team",
  "license": "MIT"
}