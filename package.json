{
  "name": "echoinwhispr-monorepo",
  "version": "1.0.0",
  "description": "EchoinWhspr - Anonymous messaging platform monorepo",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "install:all": "pnpm install",
    "dev": "pnpm -r dev",
    "dev:web": "pnpm --filter @echoinwhspr/web dev",
    "dev:convex": "pnpm --filter @echoinwhspr/convex dev",
    "dev:fullstack": "pnpm --parallel --filter @echoinwhspr/web dev --filter @echoinwhspr/convex dev",
    "dev:fullstack:sequential": "pnpm dev:convex & pnpm dev:web",
    "start:web": "pnpm --filter @echoinwhspr/web start",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @echoinwhspr/web build",
    "build:convex": "pnpm --filter @echoinwhspr/convex build",
    "build:all": "pnpm build:web",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "clean:node_modules": "rimraf node_modules \"**/node_modules\" pnpm-lock.yaml",
    "clean:install": "pnpm clean:node_modules && pnpm install",
    "convex:dev": "pnpm --filter @echoinwhspr/convex dev",
    "convex:deploy": "pnpm --filter @echoinwhspr/convex deploy",
    "convex:generate": "pnpm --filter @echoinwhspr/convex generate",
    "stop:all": "pkill -f \"next dev\" && pkill -f \"convex dev\" || true",
    "stop:web": "pkill -f \"next dev\" || true",
    "stop:convex": "pkill -f \"convex dev\" || true",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.3.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EchoinWhspr/EchoinWhspr.git"
  },
  "keywords": [
    "monorepo",
    "react",
    "nextjs",
    "convex",
    "typescript"
  ],
  "author": "EchoinWhspr Team",
  "license": "MIT",
  "pnpm": {
    "overrides": {
      "glob": "^10.5.0",
      "send": "^0.19.0",
      "node-forge": "^1.3.3",
      "qs": "^6.15.0",
      "body-parser": "^1.20.4",
      "lodash": "^4.17.23",
      "preact": "^10.28.4",
      "fast-xml-parser": "^5.3.8",
      "next": "^15.0.8",
      "semver": "^7.5.2",
      "tar@<7.5.8": "^7.5.8",
      "minimatch@<3.1.4": "^3.1.4",
      "minimatch@>=9.0.0 <9.0.7": "^9.0.7",
      "js-yaml": "^4.1.1",
      "ip": "npm:empty-npm-package@1.0.0"
    }
  }
}